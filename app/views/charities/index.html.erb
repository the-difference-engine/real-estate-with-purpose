<div class="container">
    <h2>Introduction</h2>
    <h4>We strive to help those in need!</h4>

    <h2>Simple Concepts with Big Results</h2>

  <div class="row">
    <div class="col-sm-4">
      <h3>Total Value Donated</h2>
      <h3>Local Charities Supported</h3>
      <h3>AVG Donation Amount</h3>
    </div>
  </div>

  <% @charities.each_slice(4) do |three_charities| %>
    <div class ="row">
      <% three_charities.each do |charity| %>
      <div class ="col-md-3">
        <div class ="well">  
          <a href="/charities/<%= charity.id %>" title="View Charity"><img src="<%= charity.logo %>" alt="<%= charity.description %>" class="img-responsive charity_single_image"></a>
          <br>
          <p>Name: <%= charity.name %></p>
          <p>Description: <%= charity.description %></p>
        </div> 
      </div>
      <% end %>
    </div>
  <% end %>
</div>

    



